<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="com.example.c195.controller.AddAppointmentController" xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Label text="Title:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="titleField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

    <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="descriptionField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Location:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="locationField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Contact:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <ComboBox fx:id="contactComboBox" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label text="Type:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextField fx:id="typeField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <Label text="Start Date:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <DatePicker fx:id="startDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

    <Label text="Start Time:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
    <ComboBox fx:id="startHourComboBox" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
    <ComboBox fx:id="startMinuteComboBox" GridPane.columnIndex="2" GridPane.rowIndex="6"/>

    <Label text="End Date:" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
    <DatePicker fx:id="endDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="7"/>

    <Label text="End Time:" GridPane.columnIndex="0" GridPane.rowIndex="8"/>
    <ComboBox fx:id="endHourComboBox" GridPane.columnIndex="1" GridPane.rowIndex="8"/>
    <ComboBox fx:id="endMinuteComboBox" GridPane.columnIndex="2" GridPane.rowIndex="8"/>

    <Label text="Customer ID:" GridPane.columnIndex="0" GridPane.rowIndex="9"/>
    <ComboBox fx:id="customerIdComboBox" GridPane.columnIndex="1" GridPane.rowIndex="9"/>

    <Label text="User ID:" GridPane.columnIndex="0" GridPane.rowIndex="10"/>
    <ComboBox fx:id="userIdComboBox" GridPane.columnIndex="1" GridPane.rowIndex="10"/>

    <Button text="Save" fx:id="saveButton" onAction="#onSave" GridPane.columnIndex="0" GridPane.rowIndex="11"/>
    <Button text="Cancel" fx:id="cancelButton" onAction="#onCancel" GridPane.columnIndex="1" GridPane.rowIndex="11"/>
</GridPane>
