<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="com.example.c195.controller.UpdateCustomerController" xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Label text="Customer ID:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="customerIdField" GridPane.columnIndex="1" GridPane.rowIndex="0" editable="false"/>

    <Label text="Customer Name:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="customerNameField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Address:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="addressField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Postal Code:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField fx:id="postalCodeField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label text="Phone:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <Label text="Country:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <ComboBox fx:id="countryComboBox" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

    <Label text="Division:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
    <ComboBox fx:id="divisionComboBox" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

    <Button text="Update" fx:id="updateButton" onAction="#onUpdate" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
    <Button text="Cancel" fx:id="cancelButton" onAction="#onCancel" GridPane.columnIndex="1" GridPane.rowIndex="7"/>
</GridPane>
