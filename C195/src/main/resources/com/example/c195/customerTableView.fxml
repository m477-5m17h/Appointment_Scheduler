<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.c195.controller.CustomerTableViewController" spacing="10" alignment="CENTER">
    <TableView fx:id="customerTableView">
        <columns>
            <TableColumn fx:id="customerIdColumn" text="Customer ID"/>
            <TableColumn fx:id="customerNameColumn" text="Customer Name"/>
            <TableColumn fx:id="addressColumn" text="Address"/>
            <TableColumn fx:id="postalCodeColumn" text="Postal Code"/>
            <TableColumn fx:id="phoneColumn" text="Phone"/>
            <TableColumn fx:id="divisionColumn" text="Division"/>
        </columns>
    </TableView>
    <Button fx:id="addButton" text="Add" onAction="#onAdd"/>
    <Button fx:id="updateButton" text="Update" onAction="#onUpdate"/>
    <Button fx:id="deleteButton" text="Delete" onAction="#onDelete"/>
    <Button fx:id="backButton" text="Back" onAction="#onBack"/>
</VBox>
